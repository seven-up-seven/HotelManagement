<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<SplitPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.frontendquanlikhachsan.controllers.manager.GuestManagingController"
           prefWidth="1000.0" prefHeight="600.0">

    <!-- LEFT: TableView -->
    <items>

        <VBox spacing="8.0" prefWidth="400.0" style="-fx-background-color: #f4f6f8;">
            <padding>
                <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
            </padding>

            <Label text="Danh sách Khách hàng"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <!-- Thêm nút Tạo khách hàng mới -->
            <Button text="➕ Tạo khách hàng mới"
                    onAction="#onCreateGuest"
                    style="-fx-font-weight: bold;"/>

            <TableView fx:id="tableGuest" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="40.0"/>
                    <TableColumn fx:id="colName" text="Tên" prefWidth="150.0"/>
                    <TableColumn fx:id="colSex" text="Giới tính" prefWidth="80.0"/>
                    <TableColumn fx:id="colAge" text="Tuổi" prefWidth="50.0"/>
                    <TableColumn fx:id="colIdentificationNumber" text="CMND/CCCD" prefWidth="120.0"/>
                    <TableColumn fx:id="colPhoneNumber" text="Số điện thoại" prefWidth="120.0"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="150.0"/>
                </columns>
            </TableView>
        </VBox>

        <!-- RIGHT: Detail Pane -->
        <VBox prefWidth="600.0" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
            </padding>

            <Label text="Thông tin Chi tiết Khách hàng"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                <content>
                    <VBox fx:id="detailPane" spacing="12.0"/>
                </content>
            </ScrollPane>
        </VBox>

    </items>
</SplitPane>
