<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.frontendquanlikhachsan.controllers.ForgotPasswordController"
      stylesheets="@../assets/css/login.css" style="-fx-padding: 20">

    <Label text="Khôi phục mật khẩu" styleClass="title"/>
    <TextField fx:id="usernameField" promptText="Tên đăng nhập"/>
    <TextField fx:id="emailField" promptText="Email đã đăng ký"/>
    <Button fx:id="submitButton" text="Gửi mật khẩu mới" styleClass="button"/>
    <Label fx:id="messageLabel" visible="false"/>
</VBox>
