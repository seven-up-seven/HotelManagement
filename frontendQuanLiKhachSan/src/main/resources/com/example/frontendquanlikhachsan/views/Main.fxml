<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TitledPane?>
<BorderPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../assets/css/NavBar.css"
            fx:controller="com.example.frontendquanlikhachsan.controllers.MainController">

    <left>
        <AnchorPane fx:id="sidebarContainer" prefWidth="200.0" BorderPane.alignment="CENTER_LEFT">
            <VBox fx:id="taskbar" alignment="TOP_CENTER" spacing="10" style="-fx-padding: 15; -fx-background-color: #2c3e50;" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                <Button onAction="#toggleSidebar" prefHeight="35.0" prefWidth="160.0" text="Ghim" />
                <Button onAction="#openHomeTab" prefHeight="35.0" prefWidth="160.0" style="-fx-text-fill: black;" text="🏠 Home" />
                <Button onAction="#openBookingTab" prefHeight="35.0" prefWidth="160.0" style="-fx-text-fill: black;" text="📆 Booking" />
                <Button onAction="#openStaffTab" prefHeight="35.0" prefWidth="160.0" style="-fx-text-fill: black;" text="👨‍🦳Staff"/>
                <Button onAction="#openGuestTab" prefHeight="35.0" prefWidth="160.0" style="-fx-text-fill: black;" text="👨Guest"/>
                <Button onAction="#openPositionTab" prefHeight="35.0" prefWidth="160.0" style="-fx-text-fill: black;" text="Position"/>                <Button onAction="#openPositionTab" prefHeight="35.0" prefWidth="160.0" style="-fx-text-fill: black;" text="Position"/>
                <Button onAction="#openRentalExtensionFormTab" prefHeight="35.0" prefWidth="160.0" style="-fx-text-fill: black;" text="RentalExtend"/>
            </VBox>
        </AnchorPane>
    </left>

    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="ALL_TABS" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>
